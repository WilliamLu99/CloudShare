<!-- This is the view that renders all the files that have been shared to a user -->
<h1> Shared Files </h1>
<% if @assets == nil %>
  <p> You have no shared files </p> 
<% else %>
<!-- renders a table of files shared to the current user -->
<ul class="list-group">
<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Owner</th>
        <th>File Name</th>
        <th>File Size</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @assets.each do |asset| %>
        <tr>
            <!-- Lists information regarding the shared files -->
          <td><%= User.find(asset.user_id.to_i).email %></td>
          <td><%= asset.asset.original_filename %></td>
          <td><%= asset.asset.size/1024%> KB</td>
          <td>
            <!-- Actions of the files -->
            <%= link_to "Download", asset.asset.url(:original, false) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</ul>
<% end %>
 