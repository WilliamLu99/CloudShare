<!-- Displays list of users an asset is shared with -->
<h1> Share Index </h1>
<!-- Renders a table -->
<table class="table table-striped">
  <thead>
    <tr>
      <!-- Table column names -->
      <th>Shared With</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <!-- Lists actions and information reagarding who an asset is shared to -->
  <tbody>
    <% id = @asset.id %>
    <% @shared_to.each do |sId| %>
      <tr>
        <td><%= User.find(sId.to_i).email%></td>
        <td>
          <%= link_to 'Unshare', unshare_asset_path(id, sId), method: :delete, data: { confirm: 'Are you sure?' } %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', assets_path %>

