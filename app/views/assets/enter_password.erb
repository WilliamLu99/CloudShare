<h1> Enter your Password </h1>
<!-- Creates form that takes an email as input -->

<div class="row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for @asset, :url => password_input_asset_path do |f| %>            
            <%= f.label :Password %>
            <%= f.password_field :password, class: 'form-control' %>    
            <%= f.submit "Enter", class: "btn btn-primary" %>
        <% end %>
    </div>
</div> 
<br>
<%= link_to 'Click here after file has finished downloading', assets_path %>
