<p id="notice"><%= notice %></p>

<h1>Assets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>File Name</th>
      <th>File Size</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.user_id %></td>
        <td><%= asset.asset.original_filename %></td>
        <td><%= asset.asset.size/1024%> KB</td>
        <td>
          <%= link_to 'Show', asset %>
          <%= link_to 'Edit', edit_asset_path(asset) %>
          <%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to "Download", asset.asset.url(:original, false) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_asset_path %>
