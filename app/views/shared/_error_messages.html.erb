<% if( @user.errors.any?) %>
 <div id="error_explanation">
      <div class="alert alert-danger">
         This form contains errors!
         <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg =%></li>
         <% end %>
      </div>
    </div>
<% end %>
 
 <!-- Rails automatically provides error messages based on model validations-->