<!-- Displays login page -->
<!-- parameters from the form_for method are stored in the params hash. 
        Also submits a POST request to current page-->

<div class="row">
    <div class ="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <h1>Log In</h1>
                <br>
                <!-- Display fancy email input form -->
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', 'aria-describedby': 'basic-addon1' %>
                </div>
                <br>
                <!-- Display fancy password input form -->
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                </div>
                <br>
                <!-- Display login button -->
                <%= f.submit "Log in", class: "btn btn-primary" %>
                <br>
                </div>
            </div>
        <% end %>
    </div>
</div>
